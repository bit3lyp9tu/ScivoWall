RewriteEngine On

# 1. .php-Erweiterung weglassen (Dateien direkt ohne .php aufrufen)
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)$ $1.php [L]

# 2. Wenn Datei nicht existiert, prüfe ob sie in /pages existiert

# 2.1 Prüfe auf /pages/ohne.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/pages/$1.php -f
RewriteRule ^(.+)$ /pages/$1.php [L]

# 2.2 Prüfe auf /pages/mit genauem Pfad (falls jemand /pages/foo direkt aufruft)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/pages/$1 -f
RewriteRule ^(.+)$ /pages/$1 [L]

# 3. Wenn nichts gefunden → 404 Fehlerseite
ErrorDocument 404 /404.php


AddDefaultCharset UTF-8

<IfModule mod_php.c>
    php_value default_charset "UTF-8"
</IfModule>

